{
  "skills": {
    "materials-search": {
      "name": "Materials Search",
      "description": "Search Materials Project database for materials by formula, elements, band gap, and other properties",
      "command": "python",
      "args": [
        "${PROJECT_ROOT}/skills/scripts/materials_search.py"
      ],
      "env": {
        "MP_API_KEY": "${env:MP_API_KEY}",
        "PYTHONPATH": "${PROJECT_ROOT}"
      },
      "category": "materials",
      "icon": "search",
      "examples": [
        "/materials-search --formula Si",
        "/materials-search --elements Li,Fe,O --stable",
        "/materials-search --band-gap-min 1.0 --band-gap-max 3.0 --stable"
      ]
    },
    "materials-export": {
      "name": "Materials Export",
      "description": "Export materials data to professionally formatted Excel files",
      "command": "python",
      "args": [
        "${PROJECT_ROOT}/skills/scripts/materials_export.py"
      ],
      "env": {
        "MP_API_KEY": "${env:MP_API_KEY}",
        "PYTHONPATH": "${PROJECT_ROOT}"
      },
      "category": "materials",
      "icon": "download",
      "examples": [
        "/materials-export --material-id mp-149 --output silicon.xlsx",
        "/materials-export --band-gap-min 1.0 --band-gap-max 3.0 --stable --limit 20",
        "/materials-export --elements Fe,O --magnetic"
      ]
    },
    "materials-compare": {
      "name": "Materials Compare",
      "description": "Compare multiple materials side by side with detailed property comparison",
      "command": "python",
      "args": [
        "${PROJECT_ROOT}/skills/scripts/materials_compare.py"
      ],
      "env": {
        "MP_API_KEY": "${env:MP_API_KEY}",
        "PYTHONPATH": "${PROJECT_ROOT}"
      },
      "category": "materials",
      "icon": "compare",
      "examples": [
        "/materials-compare mp-149 mp-2534",
        "/materials-compare mp-149 mp-2534 mp-390 --json"
      ]
    }
  }
}
